{
    "compilerOptions": {
      "target": "es6",                          
      "module": "commonjs",           
      "lib": ["esnext"],
      "sourceMap": true,                     
      "outDir": "./dist",
      "strict": true,                           
      "moduleResolution": "node",            
      "typeRoots": [
        "./node_modules/@types",
        "./src/types"
      ],                      
      "esModuleInterop": true,                 
      "experimentalDecorators": true,        
      "emitDecoratorMetadata": true         
    }, 
    "exclude": [
      "node_modules"
    ]
  }